<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.EvaluateActivity">

    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <ImageView
            android:src="@mipmap/icon_arrow_left"
            android:id="@+id/UserProtocol_img_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40" />
        <TextView
            android:layout_centerHorizontal="true"
            android:text="发表评价"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@mipmap/icon_evaluate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200" />
        
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_170"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_61">
            <TextView
                android:drawablePadding="@dimen/dp_10"
                android:id="@+id/hp"
                android:layout_marginLeft="@dimen/dp_40"
                android:gravity="center"
                android:drawableLeft="@mipmap/icon_slt_evaluate"
                android:text="好评"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:drawablePadding="@dimen/dp_10"
                android:layout_toRightOf="@+id/hp"
                android:id="@+id/zp"
                android:layout_marginLeft="@dimen/dp_45"
                android:gravity="center"
                android:drawableLeft="@mipmap/icon_slt_evaluate"
                android:text="中评"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:drawablePadding="@dimen/dp_10"
                android:layout_toRightOf="@+id/zp"
                android:layout_marginLeft="@dimen/dp_45"
                android:gravity="center"
                android:drawableLeft="@mipmap/icon_slt_evaluate"
                android:text="差评"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>